<Window x:Class="PlannerNameSpace.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:PlannerControls="clr-namespace:PlannerNameSpace.Views"
        Title="ProgressWindow" Height="200" Width="403" WindowStartupLocation="CenterOwner" Closing="Window_Closing" Topmost="True" ResizeMode="NoResize">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="PaleGoldenrod" Offset="0" />
                <GradientStop Color="White" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <ProgressBar Height="20" HorizontalAlignment="Stretch" Margin="15,89,15,0" Name="ProgressBarControl" VerticalAlignment="Top" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Center" Margin="0,0,0,10" Name="CancelButton" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click" />
        <TextBlock Height="60" HorizontalAlignment="Stretch" Margin="15,10,15,0" Name="MessageBox" Text="" VerticalAlignment="Top" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" />
    </Grid>
</Window>
